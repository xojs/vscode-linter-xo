{
  "name": "linter-xo",
  "version": "2.1.3",
  "description": "Linter for XO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SamVerschueren/vscode-linter-xo"
  },
  "bugs": {
    "url": "https://github.com/SamVerschueren/vscode-linter-xo/issues"
  },
  "author": {
    "name": "Sam Verschueren",
    "email": "sam.verschueren@gmail.com",
    "url": "github.com/SamVerschueren"
  },
  "publisher": "samverschueren",
  "icon": "icon.svg",
  "categories": [
    "Linters",
    "Formatters"
  ],
  "engines": {
    "vscode": "^1.22.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onCommand:xo.fix"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "XO configuration",
      "properties": {
        "xo.enable": {
          "type": "boolean",
          "default": false,
          "description": "Control whether xo is enabled or not."
        },
        "xo.options": {
          "type": "object",
          "default": {},
          "description": "The xo options object to provide args to the xo command."
        },
        "xo.format.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Enable 'xo --fix' as a formatter"
        }
      }
    },
    "commands": [
      {
        "title": "Fix all auto-fixable problems",
        "category": "XO",
        "command": "xo.fix"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run update-vscode && cd ../xo-server && npm run compile && cd ../xo && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "npm run update-vscode"
  },
  "dependencies": {
    "vscode-languageclient": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^6.0.110",
    "typescript": "^2.8.3",
    "vscode": "^1.1.17"
  }
}
